<Page x:Class="Main_project.Views.ContactsClinik"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Main_project.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1280"
      Title="Контакты">

    <Grid Margin="105 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Foreground="#FF002558" 
                   Text="&#xA;Адрес" 
                   FontFamily="Source Code Pro Black" 
                   FontSize="32" 
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Grid.Row="0"/>
        <TextBlock Text="г. Уфа, ул. Ленина 75"
                   Foreground="#FF002558" 
                   FontSize="30"
                   FontFamily="Source Code Pro Semibold"
                   HorizontalAlignment="Left" VerticalAlignment="Center"/>



        <TextBlock Foreground="#FF002558" 
                   Text="&#xA;Режим работы" 
                   FontFamily="Source Code Pro Black" 
                   FontSize="32" 
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Grid.Row="1"/>
        <TextBlock Text="ПН-ПТ 8:00-21:00 &#xA;СБ-ВС 9:00-19:00"
                   Foreground="#FF002558" 
                   FontSize="30"
                   FontFamily="Source Code Pro Semibold"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Grid.Row="1"/>



        <TextBlock Foreground="#FF002558" 
                   Text="&#xA;Телефон" 
                   FontFamily="Source Code Pro Black" 
                   FontSize="32" 
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Grid.Row="0" Grid.Column="1"/>
        <TextBlock Text="8 (347) 201-10-86"
                   Foreground="#FF002558" 
                   FontSize="30"
                   FontFamily="Source Code Pro Semibold"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Grid.Row="0" Grid.Column="1"/>



        <TextBlock Foreground="#FF002558" 
           Text="&#xA;E-mail" 
           FontFamily="Source Code Pro Black" 
           FontSize="32" 
           HorizontalAlignment="Left" VerticalAlignment="Top"
           Grid.Row="3" Grid.Column="1"/>

        <TextBlock Text="info@medclinic.ru"
           Foreground="#FF002558" 
           FontSize="30"
           FontFamily="Source Code Pro Semibold"
           HorizontalAlignment="Left" VerticalAlignment="Center"
           Grid.Row="3" Grid.Column="1"/>
    </Grid>
</Page>
